{
  "author": "Aziz Baatout",
  "name": "notification-service",
  "version": "1.0.0",
  "description": "Notification microservice",
  "main": "dist/src/index.js",
  "prisma": {
    "schema": "src/data/schema.prisma",
    "seed": "tsx ./src/data/seed.ts"
  },
  "scripts": {
    "start:dev": "tsx watch --env-file .env src/index.ts",
    "start": "node dist/src/index.js",
    "build": "tsc",
    "lint": "eslint . --fix",
    "migrate:dev": "prisma db push",
    "seed": "prisma db seed",
    "test": "env-cmd -f .env.test jest --runInBand --silent",
    "test:coverage": "env-cmd -f .env.test jest --runInBand --coverage --silent"
  },
  "dependencies": {
    "@prisma/client": "^6.2.1",
    "@types/express-status-monitor": "^1.3.3",
    "config": "^3.3.12",
    "cors": "^2.8.5",
    "express": "^4.21.2",
    "express-status-monitor": "^1.3.4",
    "helmet": "^8.0.0",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "kafkajs": "^2.2.4",
    "prisma": "^6.2.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@stylistic/eslint-plugin": "^2.13.0",
    "@types/config": "^3.3.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.7",
    "eslint": "^9.18.0",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.20.0"
  }
}
