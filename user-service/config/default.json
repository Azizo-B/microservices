{
  "port": 9000,
  "server_url": "http://localhost:9000",
  "kafka": {
    "maxRetries": 5,
    "initialDelay": 1000,
    "config": {
      "clientId": "user-service",
      "brokers": "localhost:9092",
      "connectionTimeout": 3000
    }
  },
  "log": {
    "level": "silly",
    "disabled": false
  },
  "cors": {
    "origins": ["http://localhost:9000", "http://localhost:3000"],
    "maxAge": 10800
  },
  "auth": {
    "maxDelay": 5000,
    "argon": {
      "hashLength": 32,
      "timeCost": 6,
      "memoryCost": 131072
    },
    "jwt": {
      "audience": "all",
      "issuer": "user-service"
    }
  },
  "pagination": {
    "defaultPage": 1,
    "defaultLimit": 10,
    "maxLimit": 200
  }
}
